<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
    <h1>{{ title }}</h1>

    <form action="{{ path('read_csv') }}" method="POST">
        <input type="text" name="name">
        <input type="submit" value="Nouvelle API">
    </form>

    {% if apis != null %}
        <ul>
            {% for api in apis %}
                <li>
                    <a href="{{ path('get_api', {id: api.getId}) }}">
                        {{ api.getName }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</html>
